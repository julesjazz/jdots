# ===============================================
# ⚙️  Derived Values (Evaluated in Script)
# ===============================================
# These variables must be evaluated at runtime
OS_TYPE=$(uname -s)
ARCH=$(uname -m)
# Platform and Hardware
OS_TYPE=$(uname -s)                 # Darwin, Linux, etc.
ARCH=$(uname -m)                    # arm64, x86_64, etc.
# Derived Git Configuration
GIT_NAME="${FIRST_NAME} ${LAST_NAME}"
GIT_EMAIL="${EMAIL}"

# OS/Distro Detection
if grep -iq microsoft /proc/version 2>/dev/null; then
  DISTRO="wsl"
elif [[ "$OS_TYPE" == "Linux" && -f /etc/os-release ]]; then
  . /etc/os-release
  DISTRO="${ID,,}"                 # e.g., ubuntu, debian, arch
elif [[ "$OS_TYPE" == "Darwin" ]]; then
  DISTRO="macos"
else
  DISTRO="unknown"
fi

# Machine Context
HOST_ID=$(hostname -s)             # short hostname (e.g. julia-mbp)
PROFILE_NAME="${DISTRO}-${ARCH}"   # fallback profile identity

# Optional Timezone detection (from earlier)
TIMEZONE=$(
  readlink /etc/localtime 2>/dev/null | sed 's|.*/zoneinfo/||' ||
  (systemsetup -gettimezone 2>/dev/null | awk '{print $3}') ||
  echo "UTC"
)
TIMEZONE=$(
  TZ_PATH=$(readlink /etc/localtime 2>/dev/null)
  if [[ -n "$TZ_PATH" ]]; then
    echo "$TZ_PATH" | sed 's|.*/zoneinfo/||'
  elif command -v systemsetup >/dev/null; then
    systemsetup -gettimezone 2>/dev/null | awk '{print $3}'
  else
    echo "UTC"
  fi
)


