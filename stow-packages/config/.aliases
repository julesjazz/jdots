# Time & Date aliases
alias now='date'
alias today='date +%Y-%m-%d'
alias time='date +%H:%M:%S'
alias datetime='date +"%Y-%m-%d %H:%M:%S"'
alias timestamp='date +%s'
alias utc='date -u'
alias epoch='date +%s'
alias iso='date -Iseconds'
alias rfc='date -R'
alias cal='cal -3'
alias calyear='cal -y'
alias week='date +%V'
alias day='date +%A'
alias month='date +%B'
alias year='date +%Y'

# System Info
alias cpu='sysctl -n machdep.cpu.brand_string'
alias cores='sysctl -n hw.ncpu'
alias memory='sysctl -n hw.memsize | awk "{print \$0/1024/1024/1024 \" GB\"}"'
alias os='sw_vers -productName'
alias osver='sw_vers -productVersion'
alias build='sw_vers -buildVersion'
alias hostname='hostname -s'
alias fqdn='hostname -f'
alias ip='ifconfig | grep "inet " | grep -v 127.0.0.1'
alias mac='ifconfig | grep ether'
alias wifi='networksetup -getairportpower en0'
alias battery='pmset -g batt'
alias temp='sudo powermetrics --samplers smc -n1 | grep "CPU die temperature"'
alias load='uptime | awk -F"load average:" "{print \$2}"'
alias users='who | wc -l'
alias processes='ps aux | wc -l'

