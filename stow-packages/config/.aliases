# System and Process aliases
alias top='htop'
alias mem='free -h'
alias disk='df -h'
alias ports='netstat -tulpn'
alias psg='ps aux | grep'
alias killg='killall -9'
alias weather='curl wttr.in'
alias myip='curl ifconfig.me'
alias speed='speedtest-cli'
